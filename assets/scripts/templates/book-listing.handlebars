      </div>
    </div>

    <div class="card">
      <div class="card-header" id="headingTwo{{blItem._id}}">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo{{blItem._id}}" aria-expanded="false"
            aria-controls="collapseTwo">
            <h4>Description</h4> </button>
        </h5>
      </div>
      <div id="collapseTwo{{blItem._id}}" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion{{blItem._id}}">
        <div class="card-body">
          {{blItem.description}}

        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header" id="headingThree{{blItem._id}}">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree{{blItem._id}}" aria-expanded="false"
            aria-controls="collapseThree">
            <h4>Edit Item</h4> </button>
        </h5>
      </div>
      <div id="collapseThree{{blItem._id}}" class="collapse" aria-labelledby="headingThree" data-parent="#accordion{{blItem._id}}">
        <div class="card-body" data-id="{{blItem._id}}">



          <form id="{{blItem._id}}" class="updater">
            <h4 class="display-4">Update Item</h4>
            {{!-- <input type="text" name='item[_id]' value="{{blItem._id}}" placeholder=""> --}}
            <label>Item Name</label>
            <input type='text' name='item[item_name]' class="form-control" value="{{blItem.name}}">
            <label>Description</label>
            <input type='text' name='item[description]' class="form-control" value="{{blItem.description}}">
            <label>Location</label>
            <input type='text' name='location[name]' class="form-control" value="{{blItem.location}}">
            <br>
            <button type='submit' class='btn btn-secondary'> Submit </button>
          </form>
            <br>
            <button class="btn btn-danger" type="submit">Remove</button>
        </div>
      </div>
    </div>
